            <!-- Sidebar -->
            <div class="clearfix"></div>

        </div>
        <!-- Sidebar -left -->

    </div>
    <!-- Left Sidebar End -->

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="content-page">
        <!-- Start content -->
        <div class="content">
            <div class="container-fluid">
                <div class="page-title-box">
                    <div class="row align-items-center">
                        <div class="col-sm-6">
                            <!--<h4 class="page-title">Url Shortner</h4>-->
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-right">
                                <li class="breadcrumb-item"><a href="javascript:void(0);">Welcome, <%= user.name %> </a></li>
                            </ol>
                        </div>
                    </div> <!-- end row -->
                </div>
                <!-- end page-title -->

                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-30">
                            <div class="card-body">

                                <h4 class="mt-0 header-title">Url History</h4>
                                <p class="sub-title../plugins">
                                    You can find all <code
                                    class="highlighter-rouge">short urls </code> generated from your account here!
                                </p>
                                <!--Start Message Display-->
                                <% if(alert) { %> 
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                        <%= alert %> 
                                    </div>
                                <% } %>
                                <% if(error) { %>
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                        <%= error %> 
                                    </div>
                                <% } %>
                                <!--End Message Display-->
                                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                    <thead>
                                        <tr>
                                            <th>Destination Url</th>
                                            <th>Slug</th>
                                            <th>Created On</th>
                                            <th>Valid For</th>
                                            <th>Click Count</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>


                                    <tbody>
                                        <% urls.forEach(url => {%> 
                                            <tr>
                                                <td><a href="<%= url.url %>" target="_blank"><%= url.url %></a></td>
                                                <td><%= url.slug %> </td>
                                                <td><%= url.createdOn %> </td>
                                                <td><%= url.validFor ? (url.validFor + 'Days') : 'Lifetime' %></td>
                                                <td><%= url.clickCount %> </td>
                                                <td>
                                                    <div>
                                                        <form action="/dashboard/url" method="post">
                                                            <input type="hidden" name="slug" id="slug" value="<%=url.slug%>">
                                                            <button type="submit" value="submit" class="btn btn-primary btn-sm">Delete</button>
                                                        </form>        
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->

                
            </div>
            <!-- container-fluid -->

        </div>
        <!-- content -->

        <footer class="footer">
            © 2019 - 2020 Url Shortner <span class="d-none d-sm-inline-block"> - Crafted with <i class="mdi mdi-heart text-danger"></i> by hyp.de </span>.
        </footer>

    </div>
    <!-- ============================================================== -->
    <!-- End Right content here -->
    <!-- ============================================================== -->

</div>